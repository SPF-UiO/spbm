{% extends 'base.jinja' %}
{% set title = _('Associate existing worker') %}

{% block content %}
<p>
    {%- trans -%}
        This is the worker associated with the given national ID-number.
    {%- endtrans -%}
</p>



<form class="form-horizontal" method="post" action="">
    {% csrf_token %}
    {% autoescape off %}

    {{ object }}
    {# Include and enumerate through the main form #}
    {% include 'form-loop.jinja' %}

    {# Add the submit and cancel buttons #}
    <div class="form-group">
        {% block buttons -%}
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-primary">
                    {{ _('Associate %(worker)s with %(society)s', worker=worker.name, society=user.spfuser.society) }}
                </button>
            </div>
        {%- endblock buttons %}
    </div>
    {% endautoescape %}
</form>
{% endblock %}

