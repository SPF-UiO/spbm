{% set navigation = [('Society', 'society'), ('Workers', 'workers'), ('Events', 'events'), ('Invoices', 'invoices')] %}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>
            {%- block title %}{% endblock -%}
            {%- if self.title() %} · {% endif -%}
            SPF
        </title>
        <link href="{{ static("css/bootstrap.min.css") }}" rel="stylesheet">
        {#<link href="{{ static("css/bootstrap-theme.min.css") }}" rel="stylesheet">#}
        <link href="{{ static("css/jquery-ui.min.css") }}" rel="stylesheet">
        <link href="{{ static("css/spbm.css") }}" rel="stylesheet">
    </head>
    <body role="document">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a href="/" class="navbar-header navbar-brand">SPFs &quot;SPBM&quot;</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav" role="navigation">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Din forening <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-header">Registrering og oversikt</li>
                                <li><a href="{{ url("workers") }}">Arbeidere</a></li>
                                <li><a href="{{ url("events") }}">Arrangementer</a></li>
                                <li class="dropdown-header">Økonomi</li>
                                <li role="presentation">
                                    <a href="{{ url("invoices") }}">Fakturaer og status</a>
                                </li>
                                <li role="separator" class="divider"></li>
                                <li class="dropdown-header">Innstillinger</li>
                                <li class="disabled"><a href="#">Foreningen</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Utlån / utleie <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-header">Arbeidere og registrering</li>
                                <li><a href="{{ url("workers") }}">Arbeidere</a></li>
                                <li role="separator" class="divider"></li>
                                <li class="dropdown-header">Arrangementer og registrering</li>
                                <li><a href="{{ url("events") }}">Arrangementer</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Fakturering<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-header">Oversikt</li>
                                <li role="presentation">
                                    <a href="{{ url("invoices-list") }}">
                                        Fakturaliste
                                    </a>
                                </li>
                                <li class="dropdown-header">Registrering</li>
                                {% set closer = user.has_perm('invoices.close_period') -%}
                                <li role="presentation" {% if not closer -%} 
                                                        class="disabled"
                                                        {%- endif -%}>
                                    <a href="{% if closer %}{{ url("invoices-all") }}{% else %}#{% endif %}">
                                        Perioder og status
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Lønn <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-header">Rapportering</li>
                                <li role="presentation">
                                    <a href="/norlonn">Norlønn</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <p class="navbar-text navbar-right login-details">{{ user }} ({{ user.spfuser.society.name }})</p>
                    {% if user.is_staff -%}
                    <ul class="nav navbar-nav navbar-right" role="navigation">
                        <li role="presentation">
                            <a href="/admin">Administrasjon</a>
                        </li>
                    </ul>
                    {%- endif %}
                </div>
            </div>
        </nav>
        <div class="container">{#
            <ul class="nav nav-tabs" role="navigation">
                {% for nav in navigation -%}
                <li role="presentation" {% if nav[1] == cur_page %}class="active"{% endif %}>
                    <a href="{{ url(nav[1]) }}">
                        {{ nav[0] }}
                    </a>
                </li>
                {%- endfor %}
                <li role="presentation"><a href="/norlonn">Norlønn</a></li>
                {% if user.is_staff -%}
                <li role="presentation" class="navbar-right">
                    <a href="/admin">Admin panel</a>
                </li>
                {%- endif %}
                {% if user.has_perm('invoices.close_period') -%}
                <li role="presentation" style="float: right;">
                    <a href="/invoices/all/">Invoice management</a>
                </li>
                {%- endif %}
            </ul>#}
            {% if self.title() -%}
            <h1 class="page-header">{{ self.title() }}</h1>
            {%- endif %}
            {% block content %}
            Content here!
            {% endblock %}

        </div>
        {# Load various libraries and similarly. #}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="{{ static("js/bootstrap.min.js") }}"></script>
        <script>
        Modernizr.load({
            test: Modernizr.inputtypes.date,
            nope: "/static/js/jquery-ui.min.js",
            callback: function() {
                $("input[type=date]").datepicker();
            }
        });
        </script>
    </body>
</html>
