<!DOCTYPE html>
<html lang="{{ get_language() }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        {%- block title %}{% endblock -%}
        {%- if self.title() %} · {% endif -%}
        SPFs ❝SPBM❞
    </title>
    <link href="{{ static("css/bootstrap.min.css") }}" rel="stylesheet">
    <link href="{{ static("css/jquery-ui.min.css") }}" rel="stylesheet">
    <link href="{{ static("css/spbm.css") }}" rel="stylesheet">
</head>
<body role="document">
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="#navbar" aria-expanded="false">
                <span class="sr-only">{{ _("Toggle navigation") }}</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/" class="navbar-header navbar-brand">SPFs &quot;SPBM&quot;</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav" role="navigation">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">{{ _("Your Society") }} <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li class="dropdown-header">{{ _("Financials") }}</li>
                        <li role="presentation">
                            <a href="{{ url("invoices") }}">{{ _("Invoices and status") }}</a>
                        </li>
                        <li role="separator" class="divider"></li>
                        <li class="dropdown-header">{{ _("Settings") }}</li>
                        <li class="disabled"><a href="#">{{ _("The society") }}</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">{{ _("Bookings") }}<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li class="dropdown-header">{{ _("Workers and registrations") }}</li>
                        <li><a href="{{ url("workers") }}">{{ _("Workers") }}</a></li>
                        <li role="separator" class="divider"></li>
                        <li class="dropdown-header">{{ _("Events and registrations") }}</li>
                        <li><a href="{{ url("events") }}">{{ _("Events") }}</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">{{ _("Invoicing") }}<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li class="dropdown-header">{{ _("Overview") }}</li>
                        <li role="presentation">
                            <a href="{{ url("invoices-list") }}">
                                {{ _("Invoice list") }}
                            </a>
                        </li>
                        <li class="dropdown-header">{{ _("Registrating") }}</li>
                        {% set closer = user.has_perm('invoices.close_period') -%}
                        <li role="presentation" {% if not closer -%}
                            class="disabled"
                        {%- endif -%}>
                            <a href="{% if closer %}{{ url("invoices-all") }}{% else %}#{% endif %}">
                                {{ _("Periodes and status") }}
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">{{ _("Wages") }} <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li class="dropdown-header">{{ _("Reporting") }}</li>
                        <li role="presentation">
                            <a href="{{ url("norlonn") }}">Norlønn</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <p class="navbar-text navbar-right login-details">
                <a href="{{ url("logout") }}" class="navbar-link" title="{{ _("Log out of SPFs SPBM") }}">
                    {{ user }} ({{ user.spfuser.society.name }})
                </a>
            </p>
            {% if user.is_staff -%}
                <ul class="nav navbar-nav navbar-right" role="navigation">
                    <li role="presentation">
                        <a href="/admin">{{ _("Administration") }}</a>
                    </li>
                </ul>
            {%- endif %}
        </div>
    </div>
</nav>
<div class="container">
    {% if self.title() -%}
        <h1 class="page-header">{{ self.title() }}</h1>
    {%- endif %}
    {% if messages -%}
    <ul class="messages list-unstyled" role="alert">
        {% for message in messages %}
        <li{% if message.tags %} class="alert alert-{{ message.tags }}"{% endif %}>{{ message }}</li>
        {% endfor %}
    </ul>
    {%- endif %}

    {%- block content %}
        Content here!
    {% endblock -%}

</div>
{# Load various libraries and similarly. #}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="{{ static("js/bootstrap.min.js") }}"></script>
<script>
    Modernizr.load({
        test: Modernizr.inputtypes.date,
        nope: "/static/js/jquery-ui.min.js",
        callback: function () {
            $("input[type=date]").datepicker();
        }
    });
</script>
</body>
</html>
