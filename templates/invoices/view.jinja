{% extends "base.jinja" %}

{% block title -%}
    {{ _("Invoice for %(society)s in period %(date)s", date=date | localize, society=society) }}
{%- endblock %}

{% block content %}
    <a href="{{ url('invoices-all') }}">{{ _("Return to the invoices index") }}</a>
    <div>
        <table class="table table-striped table-hover">
            <tr>
                <th>{{ _("Description") }}</th>
                <th>{{ _("Count") }}</th>
                <th>{{ _("Item cost") }}</th>
                <th>{{ _("Total cost") }}</th>
            </tr>
            {% for item in items -%}
                <tr>
                    <td>{{ item.description }}</td>
                    <td>{{ item.count | localize | default(1) }}</td>
                    <td>{{ item.item_cost | localize }}</td>
                    <td>
                        {% if item.line_cost -%}
                            {{ _("NOK %(cost)s", cost=item.line_cost | localize) | default('') }}
                        {% endif %}
                    </td>
                </tr>
            {% endfor -%}
        </table>
    </div>
{% endblock %}
