{% extends "base.jinja" %}
{% set type = object._meta.verbose_name | lower %}
{% set title = _("Confirm deletion of %(type)s", type = type) %}

{% block content %}
    <form action="" method="post">
        {%- csrf_token %}
        <div class="panel panel-danger">
            <div class="panel-heading">
                <h2 class="panel-title">
                    {{ _("Confirm deletion") }}
                </h2>
            </div>
            <div class="panel-body">
                <p>{{ _("Are you sure that you wish to delete the %(type)s %(instance)s?",
                        type = type,
                        instance=object ) }}</p>
                <div class="">
                    <a href="{{ object.get_absolute_url() }}" class="btn btn-success">
                        {{ _("Cancel deleting and take me back") }}
                    </a>
                    <input class="btn btn-danger" type="submit" value="{{ _("Delete the %(type)s", type = type) }}"/>
                </div>
            </div>
        </div>
    </form>
{% endblock %}